<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="developer.unam.marvelapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/luisjuranelogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/luisjuranelogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarvelApplication"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.RegisterActivity"
            android:theme="@style/Theme.MarvelApplication.action"
            android:parentActivityName=".view.OAuthActivity"
            android:exported="false" />
        <activity
            android:name=".view.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.OAuthActivity"
            android:exported="true" />
        <activity
            android:name=".view.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MarvelApplication.action" />
    </application>

</manifest>